gc() {
  local type="$1"
  local org="$2"
  local repo="$3"
  
  case "$type" in
    *gh*)
      local repo_base="git@github.com"
      local checkout_dir="$CODE_DIR"
      ;;
    *bb*)
      local repo_base="git@bitbucket.org"
      local checkout_dir="$CODE_DIR/work"
      ;;
    *)
      ;;
  esac

  local uri="$repo_base:$org/$repo.git"
 
  (
    cd "$checkout_dir"
    git clone "$uri"
  )
}

gc "$@"
